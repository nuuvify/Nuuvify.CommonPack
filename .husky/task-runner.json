{
    "$schema": "https://alirezanet.github.io/Husky.Net/schema.json",
    "tasks": [
        {
            "name": "commit-message-linter",
            "command": "dotnet",
            "args": [ "husky", "exec", ".husky/csx/commit-lint.csx", "--args", "${args}" ]
        },
        {
            "name": "dotnet-format-staged-files",
            "command": "dotnet",
            "args": [ "format", "--verify-no-changes", "--verbosity", "diagnostic", "--include", "${staged}" ],
            "include": [ "**/*.cs" ]
        }
    ]
}
